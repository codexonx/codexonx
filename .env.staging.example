# Staging environment example configuration

# Database
DB_PASSWORD=strong_staging_password

# JWT Authentication
JWT_SECRET=your_staging_jwt_secret_key
NEXTAUTH_SECRET=your_staging_nextauth_secret_key

# API Configuration
API_URL=https://staging.codexonx.com/api
CORS_ORIGIN=https://staging.codexonx.com

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=staging@example.com
SMTP_PASSWORD=strong_smtp_password
EMAIL_FROM=noreply@staging.codexonx.com

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true
