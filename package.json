{
  "name": "codexonx-platform",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,js,jsx,json}\"",
    "web": "npm run dev --workspace=@codexonx/web",
    "server": "npm run dev --workspace=@codexonx/server",
    "mobile": "npm run dev --workspace=@codexonx/mobile",
    "audit-fix": "npm audit fix --force",
    "reset": "powershell -Command \"Remove-Item -Path ./node_modules -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path ./apps/*/node_modules -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path ./packages/*/node_modules -Recurse -Force -ErrorAction SilentlyContinue; npm install\"",
    "reset-web": "powershell -Command \"Remove-Item -Path ./apps/web/node_modules -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path ./apps/web/.next -Recurse -Force -ErrorAction SilentlyContinue; npm install --workspace=@codexonx/web\"",
    "reset-server": "powershell -Command \"Remove-Item -Path ./apps/server/node_modules -Recurse -Force -ErrorAction SilentlyContinue; Remove-Item -Path ./apps/server/dist -Recurse -Force -ErrorAction SilentlyContinue; npm install --workspace=@codexonx/server\"",
    "reset-mobile": "powershell -Command \"Remove-Item -Path ./apps/mobile/node_modules -Recurse -Force -ErrorAction SilentlyContinue; npm install --workspace=@codexonx/mobile\"",
    "update-deps": "npx npm-check-updates -u && npm install",
    "update-glob": "npm install glob@latest --save-dev",
    "fix-warnings": "npm install --save-dev lru-cache@latest && npm dedupe",
    "clean-cache": "npm cache clean --force",
    "analyze": "turbo run analyze",
    "typecheck": "turbo run typecheck",
    "preinstall": "npx only-allow npm",
    "postinstall": "npm run format && npm run lint",
    "cleanup": "powershell -File ./tools/cleanup.ps1",
    "cleanup-unix": "bash ./tools/cleanup.sh",
    "full-reset": "npm run cleanup && npm run build"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.11.28",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@types/supertest": "^6.0.2",
    "concurrently": "^9.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.2.3",
  "dependencies": {
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.8",
    "@radix-ui/react-select": "^1.2.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.1.6",
    "@supabase/supabase-js": "^2.81.1",
    "abab": "^2.0.6",
    "framer-motion": "^12.23.24",
    "lucide-react": "^0.552.0",
    "next": "14.2.33",
    "nodemailer": "7.0.10"
  },
  "resolutions": {
    "glob": "^10.3.10",
    "rimraf": "^5.0.5",
    "inflight": "^2.0.1",
    "lru-cache": "^10.2.0",
    "domexception": "^4.0.0",
    "abab": "^2.0.6",
    "eslint": "8.57.0",
    "framer-motion": "11.0.8",
    "next": "14.2.33",
    "nodemailer": "7.0.10"
  }
}
