# Production environment example configuration

# Database
DB_PASSWORD=extremely_strong_production_password

# JWT Authentication
JWT_SECRET=your_production_jwt_secret_key
NEXTAUTH_SECRET=your_production_nextauth_secret_key

# API Configuration
API_URL=https://www.codexonx.com/api
CORS_ORIGIN=https://www.codexonx.com

# Email Configuration
SMTP_HOST=smtp.production-mail.com
SMTP_PORT=587
SMTP_USER=no-reply@codexonx.com
SMTP_PASSWORD=extremely_strong_smtp_password
EMAIL_FROM=no-reply@codexonx.com

# Logging
LOG_LEVEL=warn

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_PASSWORD_RESET=true

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_RETENTION=15d
