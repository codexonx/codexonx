{
  "$schema": "https://schema.tauri.app/config/1",
  "package": {
    "productName": "CodexonX Desktop",
    "version": "0.1.0"
  },
  "build": {
    "beforeDevCommand": "cd .. && npm run vite:dev",
    "devPath": "http://localhost:5173",
    "beforeBuildCommand": "cd .. && npm run vite:build",
    "distDir": "../dist"
  },
  "tauri": {
    "bundle": {
      "identifier": "com.codexonx.desktop"
    },
    "windows": [
      {
        "label": "main",
        "title": "CodexonX Desktop",
        "width": 1280,
        "height": 820,
        "resizable": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
